.edit 
  %h2
    = "Edit " + @user.name
  .edit__form
    = form_for @user do |f|
      -# = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, maxlength: "7"
      .field
        = f.label :image
        %label.form-image{for:"user_image"}
          %p 写真を選択してください
        %br/
        = f.file_field :image
      .field
        = f.label :text
        %br/
        = f.text_area :text, maxlength: "40"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .actions
        = f.submit "Update"
%h3 Cancel my account
= link_to "Back", :back
